---
interface Props {
  tech: string;
  title: string;
  description: string;
  href: string;
  data: string;
}

const { tech, href, title, description, data } = Astro.props;
---

<a href={href} target="_blank" class="card">
  <span>{tech}</span>
  <h3>{title}</h3>
  <p>{description}</p>
  <strong>{data}</strong>
</a>

<style>
  .card {
    background-color: rgb(32, 32, 34);
    padding: 2rem;
    text-decoration: none;
    display: block;
    transition: 0.2s ease;
    border: 1px solid #ffffff00;
  }

  .card:hover {
    border: 1px solid #949495;
  }

  span{
	color: #65b3ff;
	text-transform: uppercase;
	font-weight: 600;
	font-size: 10px;
	letter-spacing: 4px;
	font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
  }

  h3 {
	margin-top: .5rem;
	font-weight: 600;
	font-size: 1.5rem;
    color: #fff;
  }

  p {
    margin-block: .5rem 1.4rem;
    font-size: 14px;
    color: #949495;
  }

  strong{
	font-size: 11px;
	font-weight: 600;
	text-transform: uppercase;
	color: #949495;
	font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
	font-style: italic;
	letter-spacing: 4px;
}

</style>
